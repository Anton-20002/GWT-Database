<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>com.mySampleApplication.MySampleApplication
            MySampleApplicationService
        </servlet-name>
        <servlet-class>
            com.mySampleApplication.server.page1.MySampleApplicationServiceImpl
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>com.mySampleApplication.MySampleApplication
            Page2Interface
        </servlet-name>
        <servlet-class>
            com.mySampleApplication.server.page2.Page2InterfaceImpl
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.mySampleApplication.MySampleApplication
            MySampleApplicationService
        </servlet-name>
        <url-pattern>/MySampleApplication/MySampleApplicationService
        </url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>com.mySampleApplication.MySampleApplication
            Page2Interface
        </servlet-name>
        <url-pattern>/MySampleApplication/Page2Interface</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>MySampleApplication.html</welcome-file>
    </welcome-file-list>
</web-app>